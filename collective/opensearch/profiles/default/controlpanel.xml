<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.opensearch"
    purge="False">

    <configlet
        title="OpenSearch"
        action_id="collective_opensearch"
        appId="collective.opensearch"
        category="Products"
        condition_expr=""
        icon_expr="string:${portal_url}/++resource++opensearch.png"
        url_expr="string:${portal_url}/@@opensearch_settings"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
