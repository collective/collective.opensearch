<?xml version="1.0"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal">
    <ShortName tal:content="view/get_title">Web Search</ShortName>
    <Description tal:content="view/get_description">Use Example.com to search the Web.</Description>
    <Tags tal:content="view/get_tags">water, life </Tags>
    <Contact tal:content="view/get_contact">admin@donotreply.com</Contact>
    <Url type="application/rss+xml"
        indexOffset="0"
        template="http://example.com/?q={searchTerms}&amp;pw={startPage?}&amp;format=rss"
        tal:attributes="template string:${here/portal_url}/opensearch_rss.xml?SearchableText={searchTerms}&amp;b_start={startIndex?}" />
    <Url type="application/atom+xml"
        indexOffset="0"
        template="http://example.com/?q={searchTerms}&amp;pw={startPage?}&amp;format=atom"
        tal:attributes="template string:${here/portal_url}/opensearch_atom.xml?SearchableText={searchTerms}&amp;b_start={startIndex?}" />
    <Url type="text/html"
        indexOffset="0"
        tal:attributes="template string:${here/portal_url}/search?SearchableText={searchTerms}" />
    <Url type="application/x-suggestions+json"
        tal:condition="view/allow_suggestions"
        tal:attributes="template string:${here/portal_url}/opensearch_suggestions?command={searchTerms}"/>
    <Url type="application/opensearchdescription+xml"
        rel="self"
        template="http://www.foo.com/mysearchdescription.xml"
        tal:attributes="template string:${here/portal_url}/opensearch_description.xml" />
    <Image tal:content="string:${here/portal_url}/favicon.ico">http://example.com/favicon.ico</Image>

</OpenSearchDescription>
