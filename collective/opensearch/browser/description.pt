<?xml version="1.0" encoding="utf-8" ?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal">
	<ShortName tal:content="view/getTitle">Web Search</ShortName>
	<Description><tal:block tal:define="desc view/getTheDescription|nothing"
			  tal:condition="desc" tal:replace="desc" /> </Description>      
	<Tags><tal:block tal:define="tags view/getTags|nothing"
			  tal:condition="tags" tal:replace="tags" /></Tags>
	<Contact><tal:block tal:define="contact view/getContact|nothing"
			  tal:condition="contact" tal:replace="contact" /></Contact>
	<Url tal:condition="view/getAllowHTML" type="text/html"
	  tal:attributes="template string:${here/portal_url}/search?SearchableText={searchTerms}" />
	<Url tal:condition="view/getAllowRSS" type="application/rss+xml"
	  tal:attributes="template string:${here/portal_url}/opensearch_rss?SearchableText={searchTerms}&amp;startPage={startPage?}" />
	<Url tal:condition="view/getAllowAtom" type="application/atom+xml"
	  tal:attributes="template string:${here/portal_url}/opensearch_atom?SearchableText={searchTerms}&amp;startPage={startPage?}" />
	<Url type="application/x-suggestions+json" 
	  tal:attributes="template string:${here/portal_url}/suggestion?command={searchTerms}"/>
	<Image height="16" width="16" type="image/x-icon" tal:content="python:container.absolute_url()+'/favicon.ico'"> Image </Image>
    <Query role="example" searchTerms="cat" />
	<tal:syndication define="syndi view/getSyndication|nothing" condition="syndi">
	<SyndicationRight><tal:block tal:replace="syndi" /></SyndicationRight>
	</tal:syndication>
	<tal:longName define="longName view/getLongName|nothing" condition="longName">
	<LongName><tal:block tal:replace="longName" /></LongName>
	</tal:longName>
	<tal:developer define="developer view/getDeveloper|nothing" condition="developer">
	<Developer><tal:block tal:replace="developer" /></Developer>
	</tal:developer>		
	<tal:adultContent define="adult view/getAdultContent|nothing" condition="adult">
	<AdultContent><tal:block tal:replace="adult" /></AdultContent>
	</tal:adultContent>		
	<tal:attribution define="attribution view/getAttribution|nothing" condition="attribution">
	<Attribution><tal:block tal:replace="attribution" /></Attribution>
	</tal:attribution>			
</OpenSearchDescription>

